extends layout 

block content 
    form(method="post")
        input(hidden name='user' value=user)
        label(for="title") Title
        input(name='title' type="text" required)
        label(for="message") Message 
        input(name="message" type="text" required) 
        button(type="submit") Submit
    if errors 
        for error in errors 
            h3=error.msg